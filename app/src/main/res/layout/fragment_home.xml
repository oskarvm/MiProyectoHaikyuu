<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:background="@color/naranja">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            tools:ignore="UselessParent">
            <ImageView
                android:contentDescription="@string/logo"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:src="@drawable/logo" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/fondo_menus"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/miPerfil"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fondonegro"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:text="@string/miperfil"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/blanco" />

            <Button
                android:id="@+id/verJugadores"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fondonegro"
                android:fontFamily="@font/roboto_black"
                android:text="@string/verjugadores"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/blanco" />


            <Button
                android:id="@+id/misEquipos"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fondonegro"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:text="@string/misequipos"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/blanco" />

            <Button
                android:id="@+id/jugarPartida"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/fondonegro"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:text="@string/jugarpartida"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/blanco" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/cerrarSesion"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/fondonegro"
            android:fontFamily="@font/roboto_italic"
            android:gravity="center"
            android:text="@string/cerrarsesion"
            android:textAlignment="center"
            android:textColor="@color/blanco" />
    </LinearLayout>

</LinearLayout>