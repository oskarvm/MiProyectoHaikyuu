<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:background="@color/naranja">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/irAtras"
                android:contentDescription="@string/flechaatras"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/flecha" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <ImageView
                    android:contentDescription="@string/logo"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:src="@drawable/logo"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/fondonaranja"
        android:paddingBottom="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/elegirjugadoresequipo"
            android:textSize="18sp"
            android:textColor="@color/blanco" />
    </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/pista">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="30dp"
                    android:paddingStart="75dp"
                    android:paddingEnd="0dp"
                    tools:ignore="NestedWeights">

                    <ImageView
                        android:contentDescription="@string/jugador1"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:src="@drawable/jugador_karasuno_hinata"/>


                    <ImageView
                        android:contentDescription="@string/jugador2"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:src="@drawable/jugador_karasuno_hinata"/>

                    <ImageView
                        android:contentDescription="@string/jugador3"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:src="@drawable/jugador_karasuno_hinata"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingStart="300dp"
                    android:paddingEnd="0dp">

                    <ImageView
                        android:contentDescription="@string/jugador7"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:src="@drawable/jugador_karasuno_hinata"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingStart="75dp"
                    android:paddingEnd="0dp">

                    <ImageView
                        android:contentDescription="@string/jugador4"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:src="@drawable/jugador_karasuno_hinata"/>

                    <ImageView
                        android:contentDescription="@string/jugador5"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:src="@drawable/jugador_karasuno_hinata"/>

                    <ImageView
                        android:contentDescription="@string/jugador6"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:src="@drawable/jugador_karasuno_hinata"/>
                </LinearLayout>
            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:background="@drawable/fondonaranja">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold_italic"
                android:text="@string/mediaequipo"
                android:textSize="18sp"
                android:textColor="@color/blanco" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/bloqueo"
                android:textSize="18sp"
                android:textColor="@color/blanco" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textColor="@color/blanco"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/remate"
                android:textSize="18sp"
                android:textColor="@color/blanco" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textColor="@color/blanco"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/recepcion"
                android:textSize="18sp"
                android:textColor="@color/blanco" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/blanco" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/saque"
                android:textSize="18sp"
                android:textColor="@color/blanco" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/blanco" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/colocacion"
                android:textSize="18sp"
                android:textColor="@color/blanco" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/blanco" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/borrarEquipo"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="@string/borrarequipos"
        android:textAlignment="center"
        android:textColor="@color/blanco"
        android:background="@drawable/fondonegro"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_italic" />

</LinearLayout>