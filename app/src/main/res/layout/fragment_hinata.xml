<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:background="@color/naranja">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/fondonegro2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:src="@drawable/jugador_karasuno_hinata" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/fondonaranja">


    </LinearLayout>

    <TextView
        android:id="@+id/verJugadores"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/fondonegro"
        android:text="@string/verjugadores"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/blanco"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/misEquipos"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/fondonegro"
        android:text="@string/misequipos"
        android:textColor="@color/blanco"
        android:fontFamily="@font/roboto_black"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/jugarPartida"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/fondonegro"
        android:text="@string/jugarpartida"
        android:textColor="@color/blanco"
        android:fontFamily="@font/roboto_black"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/fondonaranja">
    </LinearLayout>

    <TextView
        android:id="@+id/cerrarSesion"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="@string/cerrarsesion"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_italic"
        android:textColor="@color/blanco"
        android:background="@drawable/fondonegro"
        android:layout_gravity="center"/>



</LinearLayout>